generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
// modelo de libros con subida de imagen
model Book {
  id Int @id @default(autoincrement())
  title String @unique
  author String
  image String
  publishedDate DateTime
  createdAt DateTime @default(now())
}